---
interface Props {
  title: string;
  className?: string;
}

const { title, className = "" } = Astro.props;
---

<div class={`section-card bg-white dark:bg-gray-800 overflow-hidden rounded-lg shadow-sm ${className}`}>
  <div class="section-header relative bg-amber-100 bg-opacity-80 p-4 border-b border-amber-200">
    <h3 class="text-2xl font-bold text-amber-800">{title}</h3>
  </div>
  <div class="p-6 text-left text-gray-800 dark:text-white">
    <slot />
  </div>
</div>
