---
import SectionCard from './SectionCard.astro';

// アイコンのパス定義
const iconPaths = {
  frontend: "M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z",
  backend: "M2 5a2 2 0 012-2h12a2 2 0 012 2v10a2 2 0 01-2 2H4a2 2 0 01-2-2V5zm3.293 1.293a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 01-1.414-1.414L7.586 10 5.293 7.707a1 1 0 010-1.414zM11 12a1 1 0 100 2h3a1 1 0 100-2h-3z",
  infra: "M5 12a1 1 0 102 0V6.414l1.293 1.293a1 1 0 001.414-1.414l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L5 6.414V12zM15 8a1 1 0 10-2 0v5.586l-1.293-1.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L15 13.586V8z",
  other: "M10 3.5a1.5 1.5 0 013 0V4a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-.5a1.5 1.5 0 000 3h.5a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-.5a1.5 1.5 0 00-3 0v.5a1 1 0 01-1 1H6a1 1 0 01-1-1v-3a1 1 0 00-1-1h-.5a1.5 1.5 0 010-3H4a1 1 0 001-1V6a1 1 0 011-1h3a1 1 0 001-1v-.5z"
};

// スキルデータ
// 共通のカラースタイル
const commonStyles = {
  iconColor: "text-amber-600",
  bgColor: "bg-amber-50",
  pillColor: "bg-amber-100",
  textColor: "text-amber-800"
};

const skillCategories = [
  {
    title: "フロントエンド",
    ...commonStyles,
    iconPath: iconPaths.frontend,
    skills: ["React", "Vue.js", "TypeScript", "HTML/CSS", "Tailwind CSS"]
  },
  {
    title: "バックエンド",
    ...commonStyles,
    iconPath: iconPaths.backend,
    skills: ["Node.js", "Python", "Ruby on Rails", "GraphQL"]
  },
  {
    title: "インフラ",
    ...commonStyles,
    iconPath: iconPaths.infra,
    skills: ["AWS", "Docker", "CI/CD", "Kubernetes"]
  },
  {
    title: "その他",
    ...commonStyles,
    iconPath: iconPaths.other,
    skills: ["Git", "Agile/Scrum", "UI/UX", "テスト自動化", "データ分析"]
  }
];
---

<SectionCard title="技術スキル" className="mt-6">
  {skillCategories.map(category => (
    <div class="mb-8">
      <div class={`flex items-center ${category.bgColor} dark:bg-opacity-20 p-3 rounded-md mb-4`}>
        <div class={`p-2 rounded-md ${category.bgColor} dark:bg-opacity-30 mr-3`}>
          <svg xmlns="http://www.w3.org/2000/svg" class={`h-5 w-5 ${category.iconColor}`} viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d={category.iconPath} clip-rule="evenodd" />
          </svg>
        </div>
        <h4 class="text-lg font-semibold text-yellow-900 dark:text-amber-400">{category.title}</h4>
      </div>
      
      <div class="flex flex-wrap gap-2 ml-2">
        {category.skills.map(skill => (
          <span class={`inline-block px-4 py-1 rounded-full ${category.pillColor} ${category.textColor} text-sm font-medium`}>
            {skill}
          </span>
        ))}
      </div>
    </div>
  ))}
</SectionCard>
