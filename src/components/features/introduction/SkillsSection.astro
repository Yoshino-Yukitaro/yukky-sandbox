};

// スキルデータ
// 共通のカラースタイル
const commonStyles = {
  iconColor: "text-amber-600",
  bgColor: "bg-amber-50",
  pillColor: "bg-amber-100",
  textColor: "text-amber-800"
};

const skillCategories = [
  {
    title: "バックエンド",
    ...commonStyles,
    iconPath: iconPaths.backend,
    skills: ["Ruby on Rails", "Python", "FastAPI", "Kotlin", "Spring Boot", "TypeScript", "Hono", "bun", "pnpm"]
  },
  {
    title: "フロントエンド",
    ...commonStyles,
    iconPath: iconPaths.frontend,
    skills: ["React", "Next.js", "Remix", "TypeScript", "JavaScript", "HTML/CSS", "Sass", "Tailwind CSS", "Shadcn/ui", "ChakraUI"]
  },
  {
    title: "インフラ",
    ...commonStyles,
    iconPath: iconPaths.infra,
    skills: ["AWS(主にサーバーサイド開発・運用まわり)", "Docker", "Terraform", "CFn", "Github Actions", "Sentry", "NewRelic", "その他監視"]
  },
  {
    title: "AI",
    ...commonStyles,
    iconPath: iconPaths.ai,
    skills: ["Cursor", "Windsurf", "Claude Code", "Roo Code", "Codex", "ChatGPT", "Gemini"]
  },
  {
    title: "その他",
    ...commonStyles,
    iconPath: iconPaths.other,
    skills: ["Git", "アクセシビリティ", "配色", "テスト観点"]
  }
];
---

<SectionCard title="技術スキル" className="mt-6">
  {skillCategories.map(category => (
    <div class="mb-8">
      <div class={`flex items-center ${category.bgColor} dark:bg-opacity-20 p-3 rounded-md mb-4`}>
        <div class={`p-2 rounded-md ${category.bgColor} dark:bg-opacity-30 mr-3`}>
          <svg xmlns="http://www.w3.org/2000/svg" class={`h-5 w-5 ${category.iconColor}`} viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d={category.iconPath} clip-rule="evenodd" />
          </svg>
        </div>
        <h4 class="text-lg font-semibold text-yellow-900 dark:text-amber-400">{category.title}</h4>
      </div>
      
      <div class="flex flex-wrap gap-2 ml-2">
        {category.skills.map(skill => (
          <span class={`inline-block px-4 py-1 rounded-full ${category.pillColor} ${category.textColor} text-sm font-medium`}>
            {skill}
          </span>
        ))}
      </div>
    </div>
  ))}
</SectionCard>
