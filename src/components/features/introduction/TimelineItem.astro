---
interface Props {
  period: string;
  title: string;
  badgeColor: 'orange' | 'amber' | 'yellow';
  description: string;
  isFirst?: boolean;
  isLast?: boolean;
}

const { period, title, badgeColor, description, isFirst = false, isLast = false } = Astro.props;
---

<div class="timeline-item relative pl-10 duration-300">
  <!-- Timeline node/dot -->
  <div class="absolute left-0 w-12 h-12 flex items-center justify-center z-10">
    <div class={`w-6 h-6 rounded-full bg-${badgeColor}-400/70 flex items-center justify-center`}>
      <div class="w-2 h-2 rounded-full bg-white"></div>
    </div>
  </div>
  
  <div class="mb-3">
    <h4 class="font-bold text-lg text-gray-800 dark:text-gray-200">{period}</h4>
    <span class="mt-1 px-6 py-1.5 bg-amber-100 text-amber-800 rounded-full text-sm font-medium inline-block">{title}</span>
  </div>
  
  <div class="mt-4 ml-2">
    <p class="text-gray-700 dark:text-gray-300 leading-relaxed">{description}</p>
  </div>
</div>
